@import "normalize.styl"
html,body
  height 100%
  overflow hidden
  position relative
.wrapper
  position absolute
  margin auto
  top 0
  right 0
  bottom 0
  left 0
  max-width 90vh
  max-height 90vw
  width 90%
  height 90%
  border 1px gray dashed
  background linear-gradient(to top, #000, #fff)
  canvas
    width 50px
    height 50px
    position absolute
    right 0
    top 0
